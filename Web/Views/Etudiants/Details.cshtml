@model Models.Etudiant

@{
	ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container">
	<div class="row">
		<h4 class="col-lg-12">Etudiant</h4>
	</div>
	<hr />

	<div class="row">

		<div class="col-sm-6">
			<p>
				@Html.ActionLink("Ajouter un cours", "AddCours", "Cours")
			</p>
			<table class="table">
				<tr>
					<th>
						@Html.DisplayNameFor(Model => Model.Cours.First().Nom)
					</th>
					<th></th>
				</tr>

				@foreach (var item in Model.Cours)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Nom)
						</td>
					</tr>
				}
			</table>
		</div>

		<div class="col-sm-6">
			<hr />
			<dl class="dl-horizontal">
				<dt>
					@Html.DisplayNameFor(model => model.PSR)
				</dt>

				<dd>
					@Html.DisplayFor(model => model.PSR)
				</dd>

				<dt>
					@Html.DisplayNameFor(model => model.Nom)
				</dt>

				<dd>
					@Html.DisplayFor(model => model.Nom)
				</dd>

				<dt>
					@Html.DisplayNameFor(model => model.Prenom)
				</dt>

				<dd>
					@Html.DisplayFor(model => model.Prenom)
				</dd>

			</dl>
		</div>
	</div>
	<div class="row">
		<p class="col-lg-12">
			@Html.ActionLink("Demander un tutorat", "Create", "Demandes") |
			@Html.ActionLink("Edit", "Edit", new { id = Model.IdEtudiant }) |
			@Html.ActionLink("Back to List", "Index")
		</p>
	</div>
</div>
